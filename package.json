{
  "name": "www.elt.ink",
  "version": "3.0.0",
  "description": "A web developer's playground.",
  "private": true,
  "scripts": {
    "lint": "npm run lint:md && npm run lint:html:index && npm run lint:html:components && npm run lint:css",
    "lint:md": "markdownlint {archetypes,content}/**/*.md",
    "lint:html:index": "bootlint -d W002,W005 layouts/_default/baseof.html",
    "lint:html:components": "bootlint -d E001,W001,W002,W003,W005 layouts/**/*.html",
    "lint:css": "stylelint assets/**/*.{css,scss}"
  },
  "author": "Geert Eltink",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.5.0",
    "popper.js": "^1.16.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.3",
    "bootlint": "^0.16.8",
    "htmlhint": "^0.11.0",
    "markdownlint": "^0.16.0",
    "markdownlint-cli": "^0.18.0",
    "postcss-cli": "^6.1.3",
    "stylelint": "^11.1.1",
    "stylelint-config-idiomatic-order": "^7.0.3",
    "stylelint-config-recess-order": "^2.0.2",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^19.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0"
  }
}
