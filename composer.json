{
    "name": "xtreamwayz/xtreamwayz.com",
    "description": "Source code behind xtreamwayz.com",
    "type": "project",
    "homepage": "https://github.com/xtreamwayz/xtreamwayz.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Geert Eltink",
            "homepage": "https://xtreamwayz.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "roave/security-advisories": "dev-master",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "zendframework/zend-expressive": "^2.0 || 2.0.x-dev",
        "zendframework/zend-expressive-fastroute": "^2.0",
        "zendframework/zend-expressive-helpers": "^3.0",
        "zendframework/zend-expressive-twigrenderer": "^1.3",
        "zendframework/zend-feed": "^2.6",
        "zendframework/zend-inputfilter": "^2.5",
        "zendframework/zend-mail": "^2.7",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stdlib": "^3.1",
        "dflydev/fig-cookies": "^1.0",
        "doctrine/cache": "^1.6",
        "guzzlehttp/guzzle": "^6.2",
        "michelf/php-markdown": "^1.7",
        "monolog/monolog": "^1.22",
        "symfony/yaml": "^3.2",
        "xtreamwayz/html-form-validator": "^1.0 || 1.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --disallow-test-output --report-useless-tests",
        "test-coverage": "phpunit --disallow-test-output --report-useless-tests --coverage-clover clover.xml"
    }
}
