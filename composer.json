{
    "name": "xtreamwayz/xtreamwayz.com",
    "type": "project",
    "description": "Source code behind xtreamwayz.com",
    "keywords": [
        "psr-7",
        "psr-11",
        "psr-15",
        "zend-expressive"
    ],
    "homepage": "https://github.com/xtreamwayz/xtreamwayz.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Geert Eltink",
            "homepage": "https://xtreamwayz.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "dflydev/fig-cookies": "^1.0",
        "doctrine/cache": "^1.6",
        "google/recaptcha": "^1.1",
        "guzzlehttp/guzzle": "^6.2",
        "michelf/php-markdown": "^1.7",
        "monolog/monolog": "^1.23",
        "ocramius/psr7-csrf": "^2.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "psr7-sessions/storageless": "^4.0",
        "symfony/yaml": "^4.0",
        "xtreamwayz/html-form-validator": "^1.0",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-expressive": "^3.0",
        "zendframework/zend-expressive-fastroute": "^3.0",
        "zendframework/zend-expressive-helpers": "^5.0",
        "zendframework/zend-expressive-twigrenderer": "^2.0",
        "zendframework/zend-feed": "^2.6",
        "zendframework/zend-mail": "^2.7",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stdlib": "^3.1"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "filp/whoops": "^2.1",
        "phpstan/phpstan": "^0.10",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-component-installer": "^2.1",
        "zendframework/zend-expressive-tooling": "^1.0",
        "zfcampus/zf-development-mode": "^3.1"
    },
    "config": {
        "platform": {
            "php": "7.1.10"
        },
        "sort-packages": true
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "xtreamwayz/html-form-validator",
                "zendframework/zend-expressive",
                "zendframework/zend-expressive-helpers",
                "zendframework/zend-expressive-router",
                "zendframework/zend-httphandlerrunner",
                "zendframework/zend-expressive-fastroute",
                "zendframework/zend-expressive-twigrenderer"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze -l max ./config ./src",
        "check": [
            "@analyze",
            "@test",
            "@cs-check"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "coverage": [
            "@test-coverage",
            "@test-infection"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "expressive": "expressive --ansi",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-xml=data/coverage/coverage-xml --log-junit=data/coverage/phpunit.junit.xml --coverage-clover=data/coverage/clover.xml",
        "test-infection": "infection --threads=4 --coverage=data/coverage"
    }
}
